@model IEnumerable<ProfessionalProfile_Web2.Models.Education>

@{
    ViewData["Title"] = "Index";
}

<h1>Education</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.institution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fieldOfStudy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.graduationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.institution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fieldOfStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.graduationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.userId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.educationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.educationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.educationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
