@model IEnumerable<ProfessionalProfile_Web2.Models.Endorsement>

@{
    ViewData["Title"] = "Index";
}

<h1>Endorsement</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Endorser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Endorser.userId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipient.userId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.endorsementId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.endorsementId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.endorsementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
